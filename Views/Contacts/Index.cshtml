@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Liste des Contacts";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h1 class="text-primary"><i class="bi bi-people-fill"></i> Mes Contacts</h1>
    <a asp-action="Create" class="btn btn-success shadow-sm">
        <i class="bi bi-person-plus-fill"></i> Nouveau Contact
    </a>
</div>

@* --- SECTION RECHERCHE (Étape 10) --- *@
<div class="card mb-4 border-0 shadow-sm bg-light">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-2">
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                    <input type="text" name="searchString" class="form-control border-start-0"
                           placeholder="Rechercher par nom ou prénom..." value="@Context.Request.Query["searchString"]" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Réinitialiser</a>
                </div>
            </div>
        </form>
    </div>
</div>

@* --- TABLEAU DES CONTACTS --- *@
<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle bg-white">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>Courriel</th>
                <th>Ville</th>
                <th>Catégorie</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.City</td>
                    <td>
                        @* Affichage de la catégorie avec un badge (Étape 9.4) *@
                        <span class="badge rounded-pill bg-info text-dark shadow-sm">
                            <i class="bi bi-tag-fill me-1"></i> @(item.Category?.Name ?? "Non classé")
                        </span>
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.ContactId" class="btn btn-sm btn-outline-warning" title="Modifier">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ContactId" class="btn btn-sm btn-outline-info" title="Détails">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ContactId" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center p-5 bg-white rounded shadow-sm border mt-3">
        <i class="bi bi-emoji-frown display-1 text-muted"></i>
        <p class="lead mt-3">Aucun contact trouvé pour cette recherche.</p>
    </div>
}